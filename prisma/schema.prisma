// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Login {
  id            Int     @id @default(autoincrement())
  username      String  @unique
  password      String
  user_id       Int     @unique
  auth_key      Int
  employee      Employee?
  customer      Customer?
}

model Employee {
  id            Int      @id @default(autoincrement())
  login         Login    @relation(fields: login_id, references: id)
  login_id      Int      @unique
  email         String   @unique
  first_name    String
  middle_name   String?
  last_name     String
  phone         Int      @unique
}

model Customer {
  id            Int       @id @default(autoincrement())
  login         Login?    @relation(fields: login_id, references: id)
  login_id      Int?      @unique
  first_name    String
  middle_name   String?
  last_name     String
  address       String
  email         String?
}


